{
  "packages": [
    "packages/@johnhom/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ],
      "message": "chore(release): publish %s"
    },
    "version": {
      "allowBranch": [
        "main"
      ],
      "conventionalCommits": true
    }
  }

}